{
    "compilerOptions": {
        "outDir": "./build",
        // "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext", "dom"],
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },

    "linterOptions": {
        "exclude": ["**/__tests__/**"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__/**"]
}
