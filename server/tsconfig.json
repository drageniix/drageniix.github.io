{
  "compilerOptions": {
    "outDir": "./build",
    // "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
