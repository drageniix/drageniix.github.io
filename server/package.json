{
  "name": "drageniix.github.io-server",
  "version": "1.0.0",
  "description": "Server side connection to Ashley Barrow's website.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "heroku-postbuild": "npm run test",
    "test": "jest --config=jest.config.js --coverage",
    "start": "node build/server.js",
    "start:dev": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drageniix/drageniix.github.io.git"
  },
  "types": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/drageniix/drageniix.github.io/issues"
  },
  "engines": {
    "node": "10.16.2",
    "npm": "6.9.0"
  },
  "nodemonConfig": {
    "ignore": [
      "src/__tests__",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(tsx|ts|js)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "homepage": "https://github.com/drageniix/drageniix.github.io#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "socket.io": "^2.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.26",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "nodemon": "^1.19.4",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
